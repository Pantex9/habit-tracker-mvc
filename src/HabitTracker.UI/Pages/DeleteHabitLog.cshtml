@page
@model HabitTracker.WebUI.Pages.DeleteHabitLogModel
@{
    ViewData["Title"] = "Delete Log";
}

<h2 class="page-title">Delete @Html.DisplayFor(x => x.Habit!.Name) Log</h2>
<hr />
<h3 class="page-subtitle">Are you sure you want to delete this record?</h3>
<div class="page-content">
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(x => x.HabitLog!.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(x => x.HabitLog!.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(x => x.HabitLog!.Quantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(x => x.HabitLog!.Quantity)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="HabitLog!.Id" />
        <input type="hidden" asp-for="HabitLog!.HabitId" />
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a button type="button" class="btn btn-secondary" asp-page="ViewHabitLogs" asp-route-habitId="@Model.HabitLog!.HabitId">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
