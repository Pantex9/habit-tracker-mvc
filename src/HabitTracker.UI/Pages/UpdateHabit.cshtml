@page
@model HabitTracker.WebUI.Pages.UpdateHabitModel
@{
}

<h2>Update Habit</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <input type="hidden" asp-for="Habit!.Id" />
            <div class="form-group">
                <label asp-for="Habit!.Name" class="form-label">Name</label>
                <input type="text" asp-for="Habit!.Name" class="form-control" />
                <span asp-validation-for="Habit!.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Habit!.Measure" class="form-label">Measure</label>
                <input type="text" asp-for="Habit!.Measure" class="form-control" />
                <span asp-validation-for="Habit!.Measure" class="text-danger"></span>
            </div>
            <div class="form-check form-group">
                <input type="checkbox" asp-for="Habit!.IsActive" class="form-check-input" />
                <label asp-for="Habit!.IsActive" class="form-check-label">IsActive</label>
                <span asp-validation-for="Habit!.IsActive" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}